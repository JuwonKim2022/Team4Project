<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
<mapper namespace="SignUp">
	<resultMap id="SignUpResult" type="signUp">
		<result property="signNumber" column="SIGNNUMBER" />
		<result property="name" column="NAME" />
		<result property="id" column="ID" />
		<result property="pw" column="PW" />
		<result property="email" column="EMAIL" />
		<result property="regData" column="REGDATA" />
		<result property="adminCheck" column="ADMINCHECK" />

	</resultMap>
	<!-- 아이디로만 DB검색 -->
	<select id="selectId" parameterType="signUp"
		resultMap="SignUpResult">
		SELECT ID,NAME,EMAIL
		from SIGNUP
		where ID = #{id}
	</select>

	<!-- 아이디 추가 -->
	<insert id="insertId" parameterType="signUp">
		insert into
		SIGNUP(SIGNNUMBER, ID, NAME,EMAIL,REGDATA,ADMINCHECK)
		values
		(MEMBERNUM_SEQ.nextval,#{id},#{name},#{email},sysdate,1)
	</insert>
		<!-- <insert id="insertId" parameterType="signUp">
		insert into
		SIGNUP(SIGNNUMBER, ID, NAME,EMAIL)
		values
		(MEMBERNUM_SEQ.nextval,#{id},#{name},#{pw},#{email}#{regData},#{adminCheck})
	</insert> -->
	<!-- 아이디,이름으로 삭제 -->
	<insert id="deleteId" parameterType="signUp">
			delete
		from SIGNUP
		where Id = #{id} AND NAME = #{name}
		
	</insert>

</mapper>                 